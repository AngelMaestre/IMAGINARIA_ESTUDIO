<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imaginaria.imaginaria_estudio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />
    <!--
         The INTERNET permission is required for development. Specifically,
         the Flutter tool needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Android 13+ requiere permiso para notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- Package visibility para Process Text -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />

            <data android:mimeType="text/plain" />
        </intent>
    </queries>

    <application
        android:name="com.imaginaria.imaginaria_estudio"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/launcher_icon"
        android:label="imaginaria_estudio"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.imaginaria.imaginaria_estudio.MainActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:windowSoftInputMode="adjustResize" >

            <!-- Tema visible mientras Flutter inicializa -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Canal de notificaciÃ³n por defecto para FCM -->
            <meta-data
                android:name="com.google.firebase.messaging.default_notification_channel_id"
                android:value="imaginaria_default_channel" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- No borrar: usado por Flutter tool -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

</manifest>